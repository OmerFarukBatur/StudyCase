<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Altur Studycase</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/TemplasteDocs/images/logo.png">
    <link href="~/TemplasteDocs/css/style.css" rel="stylesheet">

</head>

<body class="h-100">
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/TemplasteDocs/plugins/common/common.min.js"></script>
    <script src="~/TemplasteDocs/js/custom.min.js"></script>
    <script src="~/TemplasteDocs/js/settings.js"></script>
    <script src="~/TemplasteDocs/js/gleek.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>