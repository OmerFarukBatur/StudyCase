@using Core.DTOs.UserDtos
@model PasswordResetDto
@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card" style="height:1026px;">
                <div class="card-body">
                    <div class="row page-titles mx-0" style="background-color:white;">
                        <div class="col p-md-0">
                            <a class="text-center" href="index.html"> <h4>Şifre Sıfırla</h4></a>
                        </div>
                    </div>
                    <div class="form-validation" style="padding-top:100px;">
                        <form class="form-valide" asp-controller="Auth" asp-action="PwdReset" method="post">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                            }

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                            }

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-password">
                                    Şifre <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-confirm-password">
                                    Şifre Tekrarı <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="password" class="form-control" asp-for="@Model.PasswordConfirm" placeholder="Şifre Tekrar" required>
                                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">
                                    <button type="submit" class="btn btn-primary">Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>