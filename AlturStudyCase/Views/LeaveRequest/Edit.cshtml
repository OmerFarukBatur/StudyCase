@using Core.DTOs.LeaveRequestDtos
@model LeaveRequestUpdateDto
@{
    ViewData["Title"] = "İzin Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card" style="height:1026px;">
                <div class="card-body">
                    <div class="row page-titles mx-0" style="background-color:white;">
                        <div class="col p-md-0">
                            <a class="text-center" href="index.html"> <h4>İzin Güncelle</h4></a>
                        </div>
                    </div>
                    <div class="form-validation" style="padding-top:100px;">
                        <form class="form-valide" asp-controller="LeaveRequest" asp-action="Edit" method="post">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                            }

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                            }

                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="RowVersion" value="@Convert.ToBase64String(Model.RowVersion)" />

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Başlık <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Başlık" required>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Başlangıç Tarihi <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="date" class="form-control" asp-for="@Model.StartDate" placeholder="Başlangıç Tarihi" required>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Bitiş Tarihi <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="date" class="form-control" asp-for="@Model.EndDate" placeholder="Bitiş Tarihi" required>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    İzin Türü <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <select asp-for="LeaveTypeId" class="form-control" asp-items="Html.GetEnumSelectList<Core.Enums.LeaveType>()" required></select>
                                    <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    İzin Nedeni? <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <textarea class="form-control" asp-for="@Model.Reason" placeholder="İzin Nedeni?" required> </textarea>
                                    <span asp-validation-for="Reason" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>