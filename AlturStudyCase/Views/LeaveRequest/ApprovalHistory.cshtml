@model Core.Helpers.PaginatedList<Core.DTOs.LeaveRequestDtos.LeaveRequestApprovalDto>
@using Core.Enums
@using Core.Helpers
@{
    ViewData["Title"] = "İzin Onay Geçmişim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var selectedStatus = ViewBag.SelectedStatus as ApprovalAction?;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card" style="min-height: 800px;">
                <div class="card-body">
                    <div class="row page-titles mx-0" style="background-color:white;">
                        <div class="col p-md-0 text-center">
                            <h4>İzin Onay Geçmişim</h4>
                        </div>
                    </div>

                    <div class="row mb-3 mt-4">
                        <div class="col-md-3">
                            <form method="get" asp-controller="LeaveRequest" asp-action="ApprovalHistory">
                                <select name="filter" class="form-control" onchange="this.form.submit()">
                                    <option value="">Tümü</option>
                                    @foreach (var item in Enum.GetValues(typeof(ApprovalAction)))
                                    {
                                        var intVal = (int)item;
                                        var displayName = ((ApprovalAction)item).GetDisplayName();
                                        var isSelected = selectedStatus == (ApprovalAction)item;

                                        if (isSelected)
                                        {
                                            <option value="@intVal" selected>@displayName</option>
                                        }
                                        else
                                        {
                                            <option value="@intVal">@displayName</option>
                                        }
                                    }
                                </select>
                            </form>
                        </div>
                    </div>

                    <div class="form-validation">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Tür</th>
                                    <th>Başlangıç</th>
                                    <th>Bitiş</th>
                                    <th>Gün</th>
                                    <th>Durum</th>
                                    <th>Yönetici</th>
                                    <th>Açıklama</th>
                                    <th>Karar Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.LeaveType</td>
                                            <td>@item.StartDate.ToShortDateString()</td>
                                            <td>@item.EndDate.ToShortDateString()</td>
                                            <td>@item.TotalDays gün</td>
                                            <td>
                                                @if (item.ApprovalActionId == (int)ApprovalAction.Approve)
                                                {
                                                    <span class="badge bg-success">@item.ApprovalAction</span>
                                                }
                                                else if (item.ApprovalActionId == (int)ApprovalAction.Reject)
                                                {
                                                    <span class="badge bg-danger">@item.ApprovalAction</span>
                                                }
                                            </td>
                                            <td>@item.ManagerName</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Comments))
                                                {
                                                    @(item.Comments.Length > 30 ? item.Comments.Substring(0, 30) + "..." : item.Comments)
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td>@item.CreatedAt.ToShortDateString()</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted">
                                            @if (selectedStatus.HasValue)
                                            {
                                                <text>Bu filtreye uygun onay geçmişi bulunmuyor.</text>
                                            }
                                            else
                                            {
                                                <text>Henüz onaylanmış veya reddedilmiş izin talebiniz bulunmuyor.</text>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        <nav>
                            <ul class="pagination justify-content-center">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-controller="LeaveRequest"
                                           asp-action="ApprovalHistory"
                                           asp-route-pageIndex="@(Model.PageIndex - 1)"
                                           asp-route-filter="@((int?)selectedStatus)">
                                            Önceki
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link">Önceki</span></li>
                                }

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link"
                                           asp-controller="LeaveRequest"
                                           asp-action="ApprovalHistory"
                                           asp-route-pageIndex="@i"
                                           asp-route-filter="@((int?)selectedStatus)">
                                            @i
                                        </a>
                                    </li>
                                }

                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-controller="LeaveRequest"
                                           asp-action="ApprovalHistory"
                                           asp-route-pageIndex="@(Model.PageIndex + 1)"
                                           asp-route-filter="@((int?)selectedStatus)">
                                            Sonraki
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link">Sonraki</span></li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>